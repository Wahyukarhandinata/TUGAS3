1.pola angka bertingat
for i in range(7,0,-1) :
 for  j in range(1,i+1):
    print(j,end=)
 print()
2.pola bintang bertingkat
n = 8
for i in range(n):
    for j in range(i + 1):
         print(" ",end=")
       for j in range (i,n):
           print("*",end=" ")
       print()
3.pola segi tiga bintang bertingkat
  n = 6
print(" " * n + "*")
for i in range(1,n + 1):
        print(" " * (n - i), end="")
        for j in range(i):
            print("*", end={"."})
        print("*")+
